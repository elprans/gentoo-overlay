Date: Thu, 2 Apr 2020 16:24:40 -0700
Subject: [PATCH] Install paths

---
 CMakeLists.txt              | 2 +-
 src/libhidpp/CMakeLists.txt | 4 ++--
 2 files changed, 3 insertions(+), 3 deletions(-)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index df4a0ad..9f9b7df 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -41,5 +41,5 @@ install(FILES ${CMAKE_BINARY_DIR}/pkgconfig/hidpp.pc DESTINATION share/pkgconfig
 option(INSTALL_UDEV_RULES "Install udev rules for user access to HID++ devices" OFF)
 if(INSTALL_UDEV_RULES)
 	configure_file(udev/rules.d/69-hidpp.rules.in udev/rules.d/69-hidpp.rules @ONLY)
-	install(FILES ${CMAKE_BINARY_DIR}/udev/rules.d/69-hidpp.rules DESTINATION /etc/udev/rules.d)
+	install(FILES ${CMAKE_BINARY_DIR}/udev/rules.d/69-hidpp.rules DESTINATION ${CMAKE_INSTALL_UDEVRULESDIR})
 endif()
diff --git a/src/libhidpp/CMakeLists.txt b/src/libhidpp/CMakeLists.txt
index 037e078..15e1eb5 100644
--- a/src/libhidpp/CMakeLists.txt
+++ b/src/libhidpp/CMakeLists.txt
@@ -82,6 +82,6 @@ endif()
 install(DIRECTORY "./" DESTINATION "include/hidpp"
 	FILES_MATCHING PATTERN "*.h")
 install(TARGETS hidpp
-	RUNTIME DESTINATION bin
-	LIBRARY DESTINATION lib)
+	RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR}
+	LIBRARY DESTINATION ${CMAKE_INSTALL_LIBDIR})
 
