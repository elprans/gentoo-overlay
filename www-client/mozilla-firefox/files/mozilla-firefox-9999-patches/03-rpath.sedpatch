#@@config/rules.mk

/# Linux: add -Bsymbolic flag for components/ a\
ifeq ($(OS_ARCH),Linux) \
ifdef IS_COMPONENT \
DSO_LDOPTS += -Wl,-rpath,'$$ORIGIN:$$ORIGIN/..' \
OS_LDFLAGS += -Wl,-rpath,'$$ORIGIN:$$ORIGIN/..' \
else \
DSO_LDOPTS += -Wl,-rpath,'$$ORIGIN' \
OS_LDFLAGS += -Wl,-rpath,'$$ORIGIN' \
endif \
endif
